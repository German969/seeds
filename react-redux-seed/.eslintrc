{
  "extends": [
    "react-app",
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier"
  ],
  "rules": {
    "semi": ["error", "always", { "omitLastInOneLineBlock": true}],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-props-no-spreading": [0],
    "prettier/prettier": [
      "error", {
        "trailingComma": "none",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
      }
    ]
  }
}
